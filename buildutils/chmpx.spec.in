#
# Local macros/define
#
%if %{undefined package_revision}
%global package_revision 1
%endif

%if %{undefined make_build}
%global make_build %{__make} %{?_smp_mflags}
%endif

%if %{undefined autosetup}
%global autosetup %setup -q
%endif

%global gittag v@VERSION@

%if %{undefined make_check}
%global make_check 1
%endif

%if %{undefined not_run_autogen}
%global run_autogen ./autogen.sh
%else
%global run_autogen echo "skip autogen.sh"
%endif

#
# main package
#
Summary: @SHORTDESC@
Name: @PACKAGE_NAME@
Version: @VERSION@
Release: %{package_revision}%{?dist}
License: @PKGLICENSE@
@RPMPKG_GROUP@
URL: https://@GIT_DOMAIN@/@GIT_ORG@/@PACKAGE_NAME@
Source0: https://@GIT_DOMAIN@/@GIT_ORG@/@PACKAGE_NAME@/archive/%{gittag}/%{name}-%{version}.tar.gz
Requires: k2hash%{?_isa} >= 1.0.74, libfullock%{?_isa} >= 1.0.36
%if 0%{?rhel} == 6
BuildRequires: git-core gcc-c++ make libtool k2hash-devel >= 1.0.74, libfullock-devel >= 1.0.36, libyaml-devel, nss-devel
%else
BuildRequires: systemd git-core gcc-c++ make libtool k2hash-devel >= 1.0.74, libfullock-devel >= 1.0.36, libyaml-devel, nss-devel
%endif

%description
@LONGDESC@

%prep
%autosetup -n %{name}-%{version}

%build
%run_autogen
%configure --disable-static @CONFIGUREWITHOPT@
%make_build

%install
%make_install
find %{buildroot} -name '*.la' -exec rm -f {} ';'
%if 0%{?rhel} != 6
install -D -m 644 buildutils/chmpx.service %{buildroot}/lib/systemd/system/chmpx.service
install -D -m 755 buildutils/chmpx-service-helper %{buildroot}/usr/libexec/chmpx-service-helper
install -D -m 644 buildutils/chmpx-service-helper.conf %{buildroot}/etc/antpickax/chmpx-service-helper.conf
install -D -m 644 buildutils/chmpx.ini.example %{buildroot}/etc/antpickax/chmpx.ini.example
%endif
mkdir -p %{buildroot}/var/lib/antpickax
mkdir -p %{buildroot}/var/run/antpickax

%if %{make_check}
%check
%{__make} check
%endif

%if %{defined ldconfig_scriptlets}
%ldconfig_scriptlets
%else
%post -p /sbin/ldconfig
%postun -p /sbin/ldconfig
%endif

%if 0%{?rhel} == 6
%clean
rm -rf %{buildroot}
%endif

%files
%if 0%{?rhel} == 6
%doc COPYING
%defattr(-,root,root)
%else
%license COPYING
%endif
%doc README AUTHORS ChangeLog
%{_libdir}/*.so.1*
%{_mandir}/man1/*
%{_bindir}/*
%if 0%{?rhel} != 6
/lib/systemd/system/chmpx.service
/usr/libexec/chmpx-service-helper
/etc/antpickax/*
%endif
%dir %attr(0777,root,root) /var/lib/antpickax
%dir %attr(0777,root,root) /var/run/antpickax

%if 0%{?rhel} != 6
%preun
%systemd_preun @PACKAGE_NAME@.service
%endif

#
# devel package
#
%package devel
Summary: @SHORTDESC@ (development)
Requires: %{name}%{?_isa} = %{version}-%{release}, k2hash-devel%{?_isa} >= 1.0.74, libfullock-devel%{?_isa} >= 1.0.36, libyaml-devel, nss-devel

%description devel
Development package for building with @PACKAGE_NAME@ shared library.
This package has header files and symbols for it.

%files devel
%if 0%{?rhel} == 6
%defattr(-,root,root)
%endif
%doc README AUTHORS ChangeLog
%{_includedir}/*
%{_libdir}/*.so
%{_libdir}/pkgconfig/*.pc

%changelog
@RPMCHANGELOG@
